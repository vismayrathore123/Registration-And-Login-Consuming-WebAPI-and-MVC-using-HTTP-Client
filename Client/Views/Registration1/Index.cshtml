@model IEnumerable<WebApp.Models.Registration1>

@{
    ViewData["Title"] = "Index";
}

<h1>Add Details</h1>

<div class="text-right">
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
